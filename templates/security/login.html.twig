{% extends 'base.html.twig' %}
 {% block body %}
     {{ parent() }}
     <style>
         .connection {
             width: 50%;
             margin: 220px 0 0 290px;
         }
     </style>

     <div class="container">{% if error %}
             <div class="alert alert-danger">
                 {{ error.messageKey | trans(error.messageData, 'security')}}
             </div>
         {% endif %}
         <div class="row">
             <div class="col-lg-6">
                 <h1>Connectez-vous </h1>
             </div>
         </div>
         <div class="row">
             <div class="col-lg-6 connection">
                 <form action="{{ path('login') }}" method="post">
                     <div class="form_group">

                         <span><img src="{{ asset('assets/img/users.png',null) }}" alt="utilisateur" width="48"
                                    height="48"></span>
                         <label for="username">Nom d'utilisateur</label>:
                         <input type="text" name="_username" id="username" class="form-control" value="{{ lastUsername }}">
                     </div>
                     <div class="form_group">
                         <span><img src="{{ asset('assets/img/password.png',null) }}" alt="password" width="48"
                                    height="48"></span>
                         <label for="password">Mot de passe</label> :
                         <input type="password" name="_password" id="password" class="form-control"><br>
                     </div>
                     <div class="form-group mt-4">
                         <span><img src="{{ asset('assets/img/save.png',null) }}" alt="save" width="48"
                                    height="48"></span>
                         <button type="submit" class="btn btn-action muse">Se Connecter</button>
                     </div>
                 </form>
             </div>
         </div>
     </div>

     {% block footer %}
         {{ parent() }}
     {% endblock %}
 {% endblock %}